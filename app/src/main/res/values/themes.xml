<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NavigationExample" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
    </style>

    <style name="Theme.NavigationExample" parent="Base.Theme.NavigationExample" />

    <style name="backButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:text">Back</item>
        <item name="android:drawableLeft">@drawable/arrow_left</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@android:color/darker_gray</item>
    </style>

    <style name="nextButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:text">Next</item>
        <item name="android:drawableEnd">@drawable/arrow_right</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>